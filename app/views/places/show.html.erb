<h1><%= @place.name %></h1>

<div class="container mb-3">
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place.id %>" role="button">New Post</a>
</div>

<%if @current_user %>
<div class="row">
  <% for post in @place.posts %>
    <% if @current_user.id == post.user_id%>
      <div class="col-md-4 col-sm-12">
        <h4><%= post.title %></h4>
        <h5><%= post.posted_on %></h5>
        <% if post.my_image.attached? %>
          <img src="<%= url_for(post.my_image) %>" class="img-fluid">              
        <% end %>
      
        <p><%= post.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>


